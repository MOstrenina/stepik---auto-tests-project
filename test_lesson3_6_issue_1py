import time
import math
import pytest
from selenium import webdriver

answer = math.log(int(time.time()))
linknumber = ["236895", "236896", "236897", "236898", "236899", "236903", "236904", "236905"]
link = f"https://stepik.org/lesson/{linknumber}/step1"

@pytest.fixture(scope="function")
def browser():
    print("\nstart browser for test..")
    browser = webdriver.Chrome()
    yield browser
    print("\nquit browser..")
    browser.quit()


@pytest.mark.parametrize('language', [f"https://stepik.org/lesson/{linknumber}/step1"])
def test_guest_should_see_login_link(browser, language):
    link = f"http://selenium1py.pythonanywhere.com/{language}/"
    browser.get(link)
    browser.find_element_by_css_selector("#login_link")